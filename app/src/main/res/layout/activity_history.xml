<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_anim"
        android:id="@+id/mainLayout"
        tools:context=".MainActivity"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_menu_black_24dp"
            android:id="@+id/but"/>


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/trees"
            android:layout_width="217dp"
            android:layout_height="174dp"
            android:layout_below="@+id/but"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#f5b505"
            app:civ_border_width="4dp"
            android:layout_marginTop="70dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/trees"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/L1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Fajr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Fajr"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/FajrCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="257dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Dhuhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Dhuhr"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/DhuhrCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="238dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Asr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Asr"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/AsrCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="261dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Magrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Magrib"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/MagribCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="228dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Ishaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Ishaa"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/IshaaCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="242dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Tahajjud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahajjud"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/TahajjudCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="215dp"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <ListView
        android:id="@+id/drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/main_bg_anim"
        android:choiceMode="singleChoice"/>
</android.support.v4.widget.DrawerLayout>
